<includes>
  <include name="MovieWallIcons">
    <control type="image">
      <posx>4</posx>
      <posy>4</posy>
      <width>176</width>
      <height>260</height>
      <texture background="true" diffuse="wall/wall_movie_mask.png" fallback="DefaultVideoBigPoster.png">$VAR[ListPosterVar]</texture>
      <aspectratio scalediffuse="false">scale</aspectratio>
      <fadetime>500</fadetime>
    </control>
    <control type="image">
      <posx>120</posx>
      <posy>4</posy>
      <width>60</width>
      <height>60</height>
      <include condition="!Skin.HasSetting(AltNewOverlay)">OverlayVisibility0</include>
      <include condition="Skin.HasSetting(AltNewOverlay)">AltOverlayVisibility0</include>
    </control>
    <control type="image">
      <posx>-4</posx>
      <posy>-2</posy>
      <width>192</width>
      <height>277</height>
      <aspectratio>stretch</aspectratio>
      <fadetime>IconCrossfadeTime2</fadetime>
      <texture>wall/boxes/wall_movie_overlay.png</texture>
    </control>
  </include>
  <include name="WallIcons">
    <control type="image">
      <posx>12</posx>
      <posy>7</posy>
      <width>185</width>
      <height>182</height>
      <texture background="true" diffuse="thumbs/boxes/cdcover_mask.png" fallback="DefaultAudio.png">$VAR[ListAlbumVar]</texture>
      <aspectratio scalediffuse="false">scale</aspectratio>
      <fadetime>500</fadetime>
    </control>
    <control type="image">
      <posx>0</posx>
      <posy>-2</posy>
      <width>208</width>
      <height>204</height>
      <aspectratio>stretch</aspectratio>
      <fadetime>IconCrossfadeTime2</fadetime>
      <texture>wall/boxes/wall_overlay.png</texture>
    </control>
  </include>
  <include name="WallMoviesContent">
    <itemlayout width="184" height="268" condition="Container.Content(movies)|Container.Content(tvshows)|Container.Content(seasons)|Container.Content(musicvideos)">
      <include>MovieWallIcons</include>
    </itemlayout>
    <focusedlayout width="184" height="268" condition="Container.Content(movies)|Container.Content(tvshows)|Container.Content(seasons)|Container.Content(musicvideos)">
      <control type="group">
        <animation type="Focus" condition="Container(500).Row(2)" reversible="false">
          <effect type="zoom" center="93,187" start="100" end="160" time="400" easing="out" tween="cubic" reversible="false" />
        </animation>
        <animation type="Focus" condition="Container(500).Row(1)" reversible="false">
          <effect type="zoom" center="93,135" start="100" end="160" time="400" easing="out" tween="cubic" reversible="false" />
        </animation>
        <animation type="Focus" condition="Container(500).Row(0)" reversible="false">
          <effect type="zoom" center="93,90" start="100" end="160" time="400" easing="out" tween="cubic" reversible="false" />
        </animation>
        <include>MovieWallIcons</include>
      </control>
    </focusedlayout>
    <itemlayout width="208" height="204" condition="![Container.Content(movies)|Container.Content(tvshows)|Container.Content(seasons)|Container.Content(musicvideos)]">
      <include>WallIcons</include>
    </itemlayout>
    <focusedlayout width="208" height="204" condition="![Container.Content(movies)|Container.Content(tvshows)|Container.Content(seasons)|Container.Content(musicvideos)]">
      <control type="group">
        <animation type="Focus" condition="Container(500).Row(3)" reversible="false">
          <effect type="zoom" center="99,120" start="100" end="190" time="400" easing="out" tween="cubic" reversible="false" />
        </animation>
        <animation type="Focus" condition="Container(500).Row(1) | Container(500).Row(2)" reversible="false">
          <effect type="zoom" center="99,99" start="100" end="190" time="400" easing="out" tween="cubic" reversible="false" />
        </animation>
        <animation type="Focus" condition="Container(500).Row(0)" reversible="false">
          <effect type="zoom" center="99,68" start="100" end="190" time="400" easing="out" tween="cubic" reversible="false" />
        </animation>
        <include>WallIcons</include>
      </control>

    </focusedlayout>
  </include>
  <include name="WallMoviesHor">
    <control type="panel" id="500">
      <viewtype label="31234">icon</viewtype>
      <posx>129</posx>
      <posy>124</posy>
      <width>1660</width>
      <height>820</height>
      <pagecontrol>61</pagecontrol>
      <scrolltime tween="quadratic" easing="out">200</scrolltime>
      <onleft>560</onleft>
      <onright>560</onright>
      <onup>9000</onup>
      <ondown>61</ondown>
      <orientation>horizontal</orientation>
      <include>WallMoviesContent</include>
    </control>
  </include>
  <include name="WallMoviesVert">
    <control type="panel" id="500">
      <viewtype label="31234">icon</viewtype>
      <posx>129</posx>
      <posy>124</posy>
      <width>1662</width>
      <height>807</height>
      <pagecontrol>72</pagecontrol>
      <scrolltime tween="quadratic" easing="out">200</scrolltime>
      <onleft>9000</onleft>
      <onright>72</onright>
      <onup>560</onup>
      <ondown>560</ondown>
      <orientation>vertical</orientation>
      <include>WallMoviesContent</include>
    </control>
    <control type="scrollbar" id="72">
      <posx>1815</posx>
      <posy>132</posy>
      <width>9</width>
      <height>802</height>
      <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(72)">Conditional</animation>
      <include>CommonVerticalScrollbar</include>
      <onleft>560</onleft>
      <onright>9000</onright>
    </control>
  </include>
  <include name="Viewtype_Wall">
    <control type="group">
      <visible>Control.IsVisible(500)</visible>
      <include>Animation_VisibleChange200</include>
      <include>Animation_OpenCloseZoom_New</include>
      <include>Furniture_Wall_Movies</include>
      <include>WallArrows</include>
      <include condition="!Skin.HasSetting(WallMoviesVertical)">WallMoviesHor</include>
      <include condition="Skin.HasSetting(WallMoviesVertical)">WallMoviesVert</include>
    </control>
  </include>
</includes>