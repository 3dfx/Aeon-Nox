<?xml version="1.0" encoding="utf-8"?>
<window>
  <defaultcontrol always="true">10</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <onload condition="Library.HasContent(tvshows) + System.HasAddon(script.tv.show.next.aired)">XBMC.AlarmClock(NextAired,XBMC.RunScript(script.tv.show.next.aired,silent=True),00:00:10,silent)</onload>
  <onload condition="System.HasAddon(script.watchlist) + [Skin.HasSetting(HomeInProgress) | Skin.HasSetting(HomeWatchList)]">RunScript(script.watchlist,movies=true&amp;episodes=true&amp;albums=true&amp;limit=8)</onload>
  <onload condition="System.HasAddon(script.xbmc.intro.movie)">RunScript(script.xbmc.intro.movie)</onload>
  <controls>
    <control type="button" id="10">
      <description>trigger</description>
      <onfocus condition="!System.HasAddon(script.xbmc.intro.movie)">SetFocus(11)</onfocus>
      <texturenofocus>-</texturenofocus>
      <texturefocus>-</texturefocus>
      <visible>!Skin.HasSetting(Use_Startup_Playlist)</visible>
    </control>
    <control type="button" id="10">
      <description>trigger with startup Playlist</description>
      <onfocus>XBMC.PlayMedia($ESCINFO[Skin.String(Startup_Playlist_Path)])</onfocus>
      <onfocus condition="!System.HasAddon(script.xbmc.intro.movie)">SetFocus(11)</onfocus>
      <texturenofocus>-</texturenofocus>
      <texturefocus>-</texturefocus>
      <visible>Skin.HasSetting(Use_Startup_Playlist)</visible>
    </control>
    <control type="button" id="11">
      <onfocus condition="!System.HasAddon(script.watchlist) | ![Skin.HasSetting(HomeInProgress) | Skin.HasSetting(HomeWatchList)]">SetFocus(12)</onfocus>
      <onfocus condition="System.HasAddon(script.watchlist) + [Skin.HasSetting(HomeInProgress) | Skin.HasSetting(HomeWatchList)]">SetFocus(11)</onfocus>
      <visible>IsEmpty(Window(Home).Property(WatchList_Running))</visible>
      <animation effect="fade" start="0" end="100" time="0" delay="1000">Focus</animation>
    </control>
    <control type="button" id="11">
      <onfocus>ReplaceWindow(Home)</onfocus>
      <visible>!IsEmpty(Window(Home).Property(WatchList_Running))</visible>
      <animation effect="fade" start="0" end="100" time="0" delay="1000">Focus</animation>
    </control>
    <control type="button" id="12">
      <onfocus>ReplaceWindow(Home)</onfocus>
      <animation effect="fade" start="0" end="100" time="0" delay="4000">Focus</animation>
    </control>
    <control type="image">
      <include>FullscreenDimensions</include>
      <texture>common/black.png</texture>
    </control>
    <control type="image">
      <posx>923</posx>
      <posy>503</posy>
      <width>74</width>
      <height>74</height>
      <colordiffuse>$INFO[Skin.String(diffuse_mainmenu)]</colordiffuse>
      <texture>dialogs/busy.png</texture>
      <animation effect="rotate" start="360" end="0" center="auto" time="2500" loop="true" condition="true">conditional</animation>
      <animation effect="fade" start="70" time="1500" condition="true" pulse="true">Conditional</animation>
    </control>
    <control type="videowindow">
      <include>FullscreenDimensions</include>
      <visible>Player.HasVideo</visible>
    </control>
  </controls>
</window>