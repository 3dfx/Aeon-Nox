  <include name="WallHorizontal">
    <control type="panel" id="500">
      <visible>!Container.Content()</visible>
      <viewtype label="31234">icon</viewtype>
      <posx>129</posx>
      <posy>124</posy>
      <width>1660</width>
      <height>820</height>
      <pagecontrol>61</pagecontrol>
      <scrolltime tween="quadratic" easing="out">200</scrolltime>
      <onleft>500</onleft>
      <onright>500</onright>
      <onup>9000</onup>
      <ondown>61</ondown>
      <orientation>horizontal</orientation>
      <include>WallContent</include>
    </control>
  </include>
  <include name="WallVertical">
    <control type="panel" id="500">
      <visible>!Container.Content()</visible>
      <viewtype label="31234">icon</viewtype>
      <posx>129</posx>
      <posy>124</posy>
      <width>1664</width>
      <height>805</height>
      <pagecontrol>72</pagecontrol>
      <scrolltime tween="quadratic" easing="out">200</scrolltime>
      <onleft>9000</onleft>
      <onright>72</onright>
      <onup>500</onup>
      <ondown>500</ondown>
      <orientation>vertical</orientation>
      <include>WallContent</include>
    </control>
    <control type="scrollbar" id="72">
      <posx>1815</posx>
      <posy>132</posy>
      <width>9</width>
      <height>802</height>
      <animation effect="fade" start="100" end="0" time="0" condition="!Control.HasFocus(72)">Conditional</animation>
      <include>CommonVerticalScrollbar</include>
      <onleft>500</onleft>
      <onright>9000</onright>
    </control>
  </include>
  <include name="Viewtype_Wall">
    <control type="group">
      <visible>Control.IsVisible(500)</visible>
      <include>Animation_VisibleChange200</include>
      <include>Animation_OpenCloseZoom_New</include>
      <control type="image">
        <posx>147</posx>
        <posy>147</posy>
        <width>1628</width>
        <height>765</height>
        <texture background="true">wall/wall_movie_squares.png</texture>
        <include>Animation_CommonFade</include>
        <visible>[Container.Content(movies) | [Container.Content(tvshows) + !Skin.HasSetting(TVWallBanner)] | Container.Content(seasons) | Container.Content(musicvideos)]</visible>
      </control>
      <control type="image">
        <posx>144</posx>
        <posy>140</posy>
        <width>1632</width>
        <height>775</height>
        <texture background="true">wall/wall_squares.png</texture>
        <include>Animation_CommonFade</include>
        <visible>![Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(musicvideos)] + !Skin.HasSetting(titlewall)</visible>
      </control>
      <include>WallArrows</include>
      <include condition="!Skin.HasSetting(WallVertical)">WallHorizontal</include>
      <include condition="Skin.HasSetting(WallVertical)">WallVertical</include>
    </control>
  </include>
</includes>