      <include>MovieWallIcons</include>
    </itemlayout>
    <focusedlayout width="184" height="268" condition="Container.Content(movies) | [Container.Content(tvshows) + !Skin.HasSetting(TVWallBanner)] | Container.Content(seasons) | Container.Content(musicvideos)">
      <control type="group">
        <animation type="Focus" reversible="false">
          <effect type="zoom" center="auto" start="100" end="140" time="400" easing="out" tween="cubic" reversible="false" />
        </animation>
        <include>MovieWallIcons</include>
      </control>
    </focusedlayout>
    <itemlayout width="208" height="201" condition="![Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(musicvideos)] + !Skin.HasSetting(titlewall)">
      <include>WallIcons</include>
    </itemlayout>
    <focusedlayout width="208" height="201" condition="![Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(musicvideos)] + !Skin.HasSetting(titlewall)">
      <control type="group">
        <animation type="Focus" reversible="false">
          <effect type="zoom" center="auto" start="100" end="160" time="400" easing="out" tween="cubic" reversible="false" />
        </animation>
        <include>WallIcons</include>
      </control>
    </focusedlayout>
