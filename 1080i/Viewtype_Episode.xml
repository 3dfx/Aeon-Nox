<?xml version="1.0" encoding="utf-8"?>
<includes>
  <include name="Viewtype_Episode">
    <control type="group">
      <visible>Control.IsVisible(514)</visible>
      <control type="image">
        <width>1920</width>
        <height>1080</height>
        <texture>views/episodebgoverlay.png</texture>
        <include>Animation_WindowFade200</include>
        <animation effect="fade" start="90" end="90" time="400" condition="true">Conditional</animation>
        <visible>Skin.HasSetting(altoverlayinfowall)</visible>
      </control>
      <control type="image">
        <posx>0</posx>
        <posy>0</posy>
        <width>1920</width>
        <height>1080</height>
        <texture>common/fanartoverlay.png</texture>
        <colordiffuse>eeffffff</colordiffuse>
        <visible>!Skin.HasSetting(altoverlayinfowall)</visible>
        <include>Animation_WindowFade200</include>
      </control>
    </control>
    <control type="group">
      <visible>Control.IsVisible(514)</visible>
      <include>Animation_OpenCloseZoom</include>
      <!-- Browser -->
      <control type="fixedlist" id="514">
        <viewtype label="20359">list</viewtype>
        <posx>750</posx>
        <posy>0</posy>
        <width>1400</width>
        <height>1080</height>
        <scrolltime>0</scrolltime>
        <orientation>vertical</orientation>
        <movement>3</movement>
        <focusposition>4</focusposition>
        <onup>514</onup>
        <ondown>514</ondown>
        <onleft>9000</onleft>
        <onright>61</onright>
        <preloaditems>2</preloaditems>
        <pagecontrol>61</pagecontrol>
        <visible>Container.Content(episodes) | Container.Content(movies)</visible>
        <animation effect="slide" start="0,0" end="40,0" time="0" condition="Container.Content(movies)">Conditional</animation>
        <animation effect="slide" start="0,0" end="0,65" time="0" condition="Skin.HasSetting(ClassicTopBar) | Skin.HasSetting(altbreadcrumbstexture)">Conditional</animation>
        <animation effect="slide" end="-150,0" delay="1200" condition="true">Conditional</animation>
        <animation effect="slide" end="0,15" time="200" condition="Container(514).Row(0)">Conditional</animation>
        <animation effect="slide" end="0,8" time="200" condition="Container(514).Row(1)">Conditional</animation>
        <animation effect="slide" end="0,0" time="200" condition="Container(514).Row(2)">Conditional</animation>
        <animation effect="slide" end="0,-8" time="200" condition="Container(514).Row(3)">Conditional</animation>
        <animation effect="slide" end="0,-15" time="200" condition="Container(514).Row(4)">Conditional</animation>
        <animation effect="slide" end="0,-22" time="200" condition="Container(514).Row(5)">Conditional</animation>
        <animation effect="slide" end="0,-29" time="200" condition="Container(514).Row(6)">Conditional</animation>
        <animation effect="slide" end="0,-36" time="200" condition="Container(514).Row(7)">Conditional</animation>
        <animation effect="slide" end="0,-43" time="200" condition="Container(514).Row(8)">Conditional</animation>
        <itemlayout width="950" height="90">
          <control type="label">
            <posx>1276</posx>
            <posy>0</posy>
            <width>126</width>
            <height>90</height>
            <align>right</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.Episode]</label>
            <font>Font_Condensed28_Caps</font>
            <include>listcolornofocus</include>
          </control>
          <control type="label">
            <posx>1230</posx>
            <posy>0</posy>
            <width>950</width>
            <height>45</height>
            <align>right</align>
            <textcolor>$VAR[TitleColorVar]</textcolor>
            <label>$VAR[EpisodeTitleVar]</label>
            <font>Font_Condensed28_Caps</font>
            <include>listcolornofocus</include>
          </control>
          <control type="label">
            <posx>1230</posx>
            <posy>50</posy>
            <width>950</width>
            <height>45</height>
            <align>right</align>
            <label>$VAR[EpisodeSubTitleVar]</label>
            <font>Font_Condensed18</font>
            <textcolor>ffaaaaaa</textcolor>
          </control>
          <control type="image">
            <posx>1275</posx>
            <posy>26</posy>
            <width>42</width>
            <height>42</height>
            <info>ListItem.Overlay,thumbs/Alt</info>
          </control>
        </itemlayout>
        <focusedlayout width="950" height="246">
          <control type="label">
            <posx>1276</posx>
            <posy>80</posy>
            <width>126</width>
            <height>90</height>
            <align>right</align>
            <aligny>center</aligny>
            <label>$INFO[ListItem.Episode]</label>
            <font>Font_Condensed28_Caps</font>
            <include>listcolornofocus</include>
          </control>
          <control type="image">
            <posx>851</posx>
            <posy>11</posy>
            <width>396</width>
            <height>226</height>
            <texture background="true" diffuse="thumbs/multiplex_tvmask.png">$INFO[ListItem.Icon]</texture>
            <bordertexture border="9">thumbs/multiplex_tvborder.png</bordertexture>
            <bordersize>9</bordersize>
            <visible>Container.Content(episodes)</visible>
            <aspectratio scalediffuse="false">scale</aspectratio>
          </control>

          <control type="group">
            <visible>Container.Content(movies)</visible>
            <posx>1070</posx>
            <posy>-140</posy>
            <control type="image">
              <posx>8</posx>
              <posy>150</posy>
              <width>150</width>
              <height>225</height>
              <fadetime>200</fadetime>
              <texture background="true" diffuse="thumbs/movieposter_mask.png" fallback="DefaultVideoBigPoster.png">$VAR[ListPosterVar]</texture>
              <aspectratio scalediffuse="false">stretch</aspectratio>
            </control>
            <control type="image">
              <posx>-11.5</posx>
              <posy>130.5</posy>
              <width>189</width>
              <height>264</height>
              <fadetime>200</fadetime>
              <texture diffuse="thumbs/movieposter_mask.png">thumbs/thumb_glass.png</texture>
              <bordertexture border="19.5">thumbs/poster_shadow.png</bordertexture>
              <bordersize>19.5</bordersize>
            </control>
            <control type="group">
              <posx>5</posx>
              <posy>150</posy>
              <include>UnwatchedIcon</include>
            </control>
          </control>
          <control type="image">
            <posx>1275</posx>
            <posy>106</posy>
            <width>42</width>
            <height>42</height>
            <info>ListItem.Overlay,thumbs/Alt</info>
          </control>
          <control type="group">
            <animation effect="slide" start="0,0" end="220,0" time="0" condition="Container.Content(movies)">Conditional</animation>
              <animation type="Conditional" reversible="false" condition="Control.HasFocus(514) + [!Container(514).OnNext + !Container(514).OnPrevious]">
                <effect type="fade" start="0" end="100" time="200" />
              </animation>
            <control type="label">
              <posx>838</posx>
              <posy>22</posy>
              <align>right</align>
              <width>825</width>
              <scrollout>false</scrollout>
              <pauseatend>1800</pauseatend>
              <scrollspeed>40</scrollspeed>
              <label>$INFO[ListItem.Title]</label>
              <textcolor>$VAR[TitleColorVar]</textcolor>
              <font>Font_Condensed28_Caps</font>
              <include>listcolornofocus</include>
              <visible>!IsEmpty(ListItem.Title)</visible>
            </control>
            <control type="label">
              <posx>838</posx>
              <posy>70</posy>
              <width>950</width>
              <height>90</height>
              <align>right</align>
              <label>$INFO[ListItem.Date]$INFO[ListItem.Rating, • ]</label>
              <font>Font_Condensed18</font>
              <textcolor>ffaaaaaa</textcolor>
              <visible>!IsEmpty(ListItem.Title)</visible>
            </control>
            <control type="textbox">
              <posx>210</posx>
              <posy>100</posy>
              <width>629</width>
              <height>130</height>
              <align>right</align>
              <info>ListItem.Plot</info>
              <font>Font_Condensed18</font>
              <include>listcolornofocus</include>
              <autoscroll time="3600" delay="6000" repeat="6000">Skin.HasSetting(AutoScroll)</autoscroll>
            </control>
          </control>
        </focusedlayout>
      </control>

      <control type="scrollbar" id="61">
        <posx>1840</posx>
        <posy>128</posy>
        <width>98</width>
        <height>822</height>
        <visible allowhiddenfocus="true">Control.HasFocus(61)</visible>
        <texturesliderbackground>views/scrollbarbacklist.png</texturesliderbackground>
        <texturesliderbar>-</texturesliderbar>
        <texturesliderbarfocus>-</texturesliderbarfocus>
        <textureslidernib>views/scrollbarnub-nofocus.png</textureslidernib>
        <textureslidernibfocus>views/scrollbarnub-focus.png</textureslidernibfocus>
        <orientation>vertical</orientation>
        <showonepage>false</showonepage>
        <colordiffuse>$INFO[Skin.String(diffuse_color)]</colordiffuse>
        <onleft>514</onleft>
        <onright>9000</onright>
      </control>
      <control type="image">
        <posx>92</posx>
        <posy>30</posy>
        <width>399</width>
        <height>142</height>
        <aspectratio>keep</aspectratio>
        <fadetime>400</fadetime>
        <texture background="true">$INFO[ListItem.path,,../logo.png]</texture>
      </control>
      <control type="image">
        <posx>49</posx>
        <posy>190</posy>
        <width>502</width>
        <height>739</height>
        <aspectratio scalediffuse="false">stretch</aspectratio>
        <fadetime>400</fadetime>
        <texture background="true" diffuse="thumbs/movieposter_mask.png">$VAR[EpisodeViewPosterVar]</texture>
        <bordertexture border="19.5">thumbs/poster_shadow.png</bordertexture>
        <bordersize>19</bordersize>
        <visible>!Skin.HasSetting(disableepisodeposter)</visible>
      </control>
      <control type="image">
        <posx>49</posx>
        <posy>190</posy>
        <width>502</width>
        <height>739</height>
        <aspectratio scalediffuse="false">stretch</aspectratio>
        <fadetime>400</fadetime>
        <texture background="true" diffuse="thumbs/movieposter_mask.png">$INFO[Container.SeasonThumb]</texture>
        <bordertexture border="19.5">thumbs/poster_shadow.png</bordertexture>
        <bordersize>19</bordersize>
        <visible>!Skin.HasSetting(EpisodeViewIcon)</visible>
      </control>
    </control>
  </include>
</includes>