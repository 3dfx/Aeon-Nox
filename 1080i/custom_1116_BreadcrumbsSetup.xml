<?xml version="1.0"?>
<window type="dialog" id="1116">
  <defaultcontrol>10</defaultcontrol>
  <zorder>4</zorder>
  <coordinates>
    <system>1</system>
    <posx>0</posx>
    <posy>0</posy>
  </coordinates>
  <include>Animation_DialogPopup</include>
  <controls>
   <control type="button" id="10">
      <include>HiddenObject</include>
      <onleft>SetFocus(20)</onleft>
      <onright>SetFocus(20)</onright>
      <onup condition="Skin.HasSetting(GlobalRSS) + !Skin.HasSetting(GlobalNowPlaying)">SetFocus(11)</onup>
      <onup condition="!Skin.HasSetting(GlobalRSS) + !Skin.HasSetting(GlobalNowPlaying)">SetFocus(13)</onup>
      <onup condition="!Skin.HasSetting(GlobalRSS) + Skin.HasSetting(GlobalNowPlaying)">SetFocus(12)</onup>
      <ondown condition="Skin.HasSetting(GlobalRSS) + !Skin.HasSetting(GlobalNowPlaying)">SetFocus(13)</ondown>
      <ondown condition="!Skin.HasSetting(GlobalRSS) + !Skin.HasSetting(GlobalNowPlaying)">SetFocus(12)</ondown>
      <ondown condition="!Skin.HasSetting(GlobalRSS) + Skin.HasSetting(GlobalNowPlaying)">SetFocus(11)</ondown>
      <onclick condition="Skin.HasSetting(GlobalRSS) + !Skin.HasSetting(GlobalNowPlaying)">SetFocus(13)</onclick>
      <onclick condition="!Skin.HasSetting(GlobalRSS) + !Skin.HasSetting(GlobalNowPlaying)">SetFocus(12)</onclick>
      <onclick condition="!Skin.HasSetting(GlobalRSS) + Skin.HasSetting(GlobalNowPlaying)">SetFocus(11)</onclick>
    </control>
    <control type="button" id="11">
      <include>HiddenObject</include>
      <onfocus>Skin.Reset(GlobalRSS)</onfocus>     
      <onfocus>Skin.Reset(GlobalNowPlaying)</onfocus>    
      <onfocus>SetFocus(10)</onfocus>
    </control>
    <control type="button" id="12">
      <include>HiddenObject</include>
      <onfocus>Skin.SetBool(GlobalRSS)</onfocus>     
      <onfocus>Skin.Reset(GlobalNowPlaying)</onfocus>    
     <onfocus>SetFocus(10)</onfocus>
    </control>
    <control type="button" id="13">
      <include>HiddenObject</include>
      <onfocus>Skin.Reset(GlobalRSS)</onfocus>     
      <onfocus>Skin.SetBool(GlobalNowPlaying)</onfocus>  
     <onfocus>SetFocus(10)</onfocus>
    </control>
   <control type="button" id="20">
      <include>HiddenObject</include>
      <onleft>SetFocus(10)</onleft>
      <onright>SetFocus(30)</onright>
      <onup></onup>
      <ondown></ondown>
      <onclick>Skin.ToggleSetting(breadcrumbsweather)</onclick> 
    </control>
   <control type="button" id="30">
      <include>HiddenObject</include>
      <onleft>SetFocus(20)</onleft>
      <onright>SetFocus(10)</onright>
      <onup></onup>
      <ondown></ondown>
      <onclick>Skin.ToggleSetting(AnalogClock)</onclick> 
    </control>
    <control type="group">
      <control type="image">
        <description>Breadcrumbs highlight</description>
        <posx>4</posx>
        <posy>0</posy>
        <width>548</width>
        <height>50</height>
        <texture>home/settings_furniture_timepanel.png</texture>
        <include>Animation_VisibleChange200</include>
        <visible>Control.HasFocus(10)</visible>
      </control>
      <control type="image">
        <description>Weather highlight</description>
        <posx>1480</posx>
        <aspectratio>stretch</aspectratio>
        <posy>0</posy>
        <width>100</width>
        <height>50</height>
        <animation effect="slide" end="60" time="0" condition="!Skin.HasSetting(AnalogClock)">Conditional</animation>
        <texture>home/settings_furniture_weather.png</texture>
        <include>Animation_VisibleChange200</include>
        <visible>Control.HasFocus(20)</visible>
      </control>
      <control type="image">
        <description>Timepanel highlight</description>
        <posx>1600</posx>
        <posy>0</posy>
        <width>320</width>
        <height>50</height>
        <animation effect="zoom" end="80,100" time="400" center="1920,25" reversible="false" condition="!Skin.HasSetting(AnalogClock)">Conditional</animation>
        <texture>home/settings_furniture_timepanel.png</texture>
        <include>Animation_VisibleChange200</include>
        <visible>Control.HasFocus(30)</visible>
      </control>
    </control>
    <control type="group">
      <control type="grouplist">
        <posx>22</posx>
        <posy>0</posy>
        <width>1950</width>
        <align>left</align>
        <itemgap>0</itemgap>
        <orientation>horizontal</orientation>
        <control type="image">
          <description>Items Icon</description>
          <width>54</width>
          <height>34</height>
          <texture>common/settings_logo.png</texture>
          <include>BreadcrumbsIcon</include>
          <animation effect="slide" start="0,0" end="-9,2" time="0" condition="true">Conditional</animation>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>ALWAYS SHOW BREADCRUMBS</label>
          <visible>!Skin.HasSetting(GlobalRSS) + !Skin.HasSetting(GlobalNowPlaying)</visible>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>SHOW NOWPLAYING (FALLBACK: BREADCRUMBS)</label>
          <visible>Skin.HasSetting(GlobalNowPlaying)</visible>
        </control>
        <control type="label">
          <include>BreadcrumbsLabel</include>
          <label>SHOW RSS FEED</label>
          <visible>Skin.HasSetting(GlobalRSS)</visible>
        </control>
      </control>
    </control>      
  </controls>
</window>